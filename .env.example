# 应用环境配置
APP_ENV=development  # development, production, testing
DEBUG=false

# MySQL数据库配置 (所有环境统一使用MySQL)
# 开发环境数据库配置
DB_HOST=localhost
DB_PORT=33060  # Docker容器映射的端口
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=helloworld_db
DB_CHARSET=utf8mb4

# 测试环境数据库配置（可选）
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
TEST_DB_NAME=helloworld_test

# 生产环境数据库配置（使用时复制到.env.production）
# DB_HOST=production_db_host
# DB_PORT=3306
# DB_USER=production_user
# DB_PASSWORD=production_password
# DB_NAME=production_db

# Flask密钥配置
SECRET_KEY=your_secret_key_here_please_change_in_production

# 邮件服务器配置
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=your_email@example.com
MAIL_USE_TLS=true

# 微信企业号配置
WECHAT_CORP_ID=your_wechat_corp_id
WECHAT_AGENT_ID=your_wechat_agent_id
WECHAT_APP_SECRET=your_wechat_app_secret
WECHAT_REDIRECT_URI=http://your-domain.com/auth/wechat/callback

# 应用服务器配置
PORT=5000